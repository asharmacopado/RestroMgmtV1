    <body>
        
        <apex:pageBlock >
            <div data-role="page" id="pageone">
                <div data-role="header">
                    <h1>Place Order</h1>
                </div>
                <a href="#" data-role="button" onclick="Alert();"  id="open_cart">View Cart <img src="{!$Resource.cart}" width="30px"/></a>
                <a href="#" data-role="button" onclick="Alert();" id="close_cart" style="display:none;">Close Cart <img src="{!$Resource.cart}" width="30px"/></a>
                
                
                
                <div data-role="main" class="ui-content">
                    
                    <div class="panel-group" id="accordion">

                        <!-- Shooping Cart Accordian Div -->
                        <div class="panel panel-default">
                            <a id="view_cart_btn" class="btn accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#collapseTwo">
                                <p id="view_cart_link" class="pull-left">View Cart <img src="{!$Resource.cart}" width="30px"/></p>
                            </a>
                            <div id="collapseTwo" class="panel-collapse collapse">
                                <div class="panel-body">
                                    <div class="container">

                                            <div class="row billed_items">
                                                <!-- Placeholder for div - billed_items -->
                                                
                                                <apex:pageBlock title="Billed Items">
                                              <apex:pageBlockTable id="cart" value="{!orderItemsList}" var="pitem">
                                              
                                             
                                           
                                                <apex:column headerValue="Item Name">
                                                     <apex:outputText value="{!pitem.name}"/>
                                               </apex:column>
                                               
                                                <apex:column headerValue="Quantity">
                                                     <apex:outputText value="{!pitem.quantity}"/>
                                               </apex:column>
                                               
                                               <apex:column headerValue="Total Price">
                                                     <apex:outputText value="{!pitem.totalPrice}"/>
                                               </apex:column>                                                                                              
                                               
                                              </apex:pageBlockTable>  
                                              <div class="col-sm-6 col-md-6 col-lg-4">
                                              </div>
                                              <div class="col-sm-6 col-md-6 col-lg-4">
                                              </div>
                                              <div class="col-sm-6 col-md-6 col-lg-4">
                                                 <apex:pageMessage id="currentBill" rendered="true" title="Current Bill" severity="high">                                                      
                                                      <apex:outputField value="{!FoodOrder.TotalPrice__c}" style="float:right;" />                                                     
                                                      
                                                 </apex:pageMessage>
                                               </div>  
                                              </apex:pageBlock> 
                                            </div>
                                            
                                            
                                        
                                            <div class="row active_cart_items">
                                                <!-- Placeholder for div - active_cart_items div -->
                                            <apex:form >
                                            <apex:pageBlock title="Cart">
                                              <apex:pageBlockTable id="cart_table" value="{!activeCartItems}" var="pitem">
                                              
                                                <apex:column headerValue="Item Name">
                                                     <apex:outputText value="{!pitem.name}"/>
                                               </apex:column>
                                           
                                                <apex:column headerValue="Quantity">
                                                     <apex:outputText value="{!pitem.quantity}"/>
                                               </apex:column>
                                           
                                                                                         
                                               <apex:column headerValue="Action">
                                                   <apex:commandButton value="+" action="{!onAdd}" disabled="{!pitem.quantity > 4}" rerender="cart, cart_table, currentBill, estimatedBill">
                                                         <apex:param name="Id" value="{!pitem.id}"/>                                  
                                                   </apex:commandButton>   
                                                   
                                                   <apex:commandButton value="-" action="{!onRemove}" disabled="{!pitem.quantity < 2}" rerender="cart, cart_table, currentBill, estimatedBill">
                                                         <apex:param name="Id" value="{!pitem.id}"/>                                  
                                                   </apex:commandButton> 
                                                   
                                                   <apex:commandButton value="Remove" action="{!onDelete}" rerender="cart, cart_table, currentBill, estimatedBill">
                                                         <apex:param name="Id" value="{!pitem.id}"/>                                  
                                                   </apex:commandButton>           
                                               </apex:column>
                                           
                                               <apex:column headerValue="Total Price">
                                                     <apex:outputText value="{!pitem.totalPrice}"/>
                                               </apex:column>                                                                                          
                                                                                           
                                                 </apex:pageBlockTable> 
                                                
                                              <div class="col-sm-6 col-md-6 col-lg-4">  
                                                    <apex:commandButton value="Place Order" action="{!placeOrder}" rerender="cart, cart_table, currentBill, estimatedBill">
                                                         <apex:param name="Id" value="{!FoodOrder.id}"/>                                  
                                                   </apex:commandButton>                                        
                                              </div>
                                              <div class="col-sm-6 col-md-6 col-lg-4">                                             
                                              </div>
                                              <div class="col-sm-6 col-md-6 col-lg-4">
                                                 <apex:pageMessage id="estimatedBill" rendered="true" title="Total Estimated Bill" severity="high">                                                      
                                                      <apex:outputField value="{!FoodOrder.TotalPriceEstimate__c}" style="float:right;" />                                                     
                                                      
                                                 </apex:pageMessage>
                                              </div>



                                                 </apex:pageBlock> 
                                                 <apex:pageBlock id="payment">
                                                    <apex:commandButton value="Pay now" action="{!payment}" rerender="cart, cart_table, currentBill, estimatedBill">    
                                                            <apex:param name="Id" value="{!FoodOrder.id}"/>                                                                          
                                                   </apex:commandButton> 
                                                </apex:pageBlock>
                                                </apex:form>
                                                
                                                
                                                
                                              </div>


                                    </div>                                   
                                </div>
                            </div>
                        </div>
                        
                    </div>
